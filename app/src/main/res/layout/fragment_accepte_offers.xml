<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Customer.Offers.AcceptOffers">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:text="إنشاء طلب جديد"
        android:textColor="@color/Gray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/profile_image"/>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile"
        android:layout_margin="20dp"
         android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_shape"
        android:layout_margin="30dp"
        android:layout_below="@id/profile_image">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تفاصيل الفاتورة"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تكلفة الطلب:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text1" />
        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="400 رس"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/text2"
            app:layout_constraintBottom_toBottomOf="@id/text2"
            app:layout_constraintEnd_toStartOf="@id/text2" />
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="العمولة: "
            android:textColor="@color/Gray"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text2" />
        <TextView
            android:id="@+id/commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 رس"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/text3"
            app:layout_constraintBottom_toBottomOf="@id/text3"
            app:layout_constraintEnd_toStartOf="@id/text3" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المبلغ الاجمالي 420 رس"
            android:textColor="#E6D057"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text3" />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="10dp"
              app:layout_constraintTop_toBottomOf="@id/text4" >
              <TextView
                  android:id="@+id/reject"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="رفض"
                  android:textColor="@color/Gray"
                  android:textSize="18sp"
                  android:textStyle="bold"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:padding="10dp"
                  android:background="@drawable/textview_shape" />
              <TextView
                  android:id="@+id/accept"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="قبول"
                  android:textColor="@color/Gray"
                  android:textSize="18sp"
                  android:layout_weight="1"
                  android:textStyle="bold"
                  android:padding="10dp"
                  android:gravity="center"
                  android:background="@drawable/textview_shape" />

          </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>